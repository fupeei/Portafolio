<style>
    @import url('https://fonts.googleapis.com/css2?family=Raleway:wght@300&display=swap');
    section{
        height: 100vh;
        padding-top: 20px;
    }
    .titulo-tarjeta{
        display: flex;
        gap: 8px;
        align-items: center;
        font-weight: bold;
    }
    .desarrollo{
        font-size: 16px;
    }
    img{
        src: "/Imagenes/ytb-downloader.png";
        height: 280px;
        border-radius: 30px;
        object-fit: cover;
    }
    .cuadro{
        width: 1050px;
        border-radius: 30px;
        display: flex;
        align-items: center;
        flex-direction: column;
        padding: 10px;
        padding-top: 3rem;
        padding-bottom: 3rem;
        view-timeline: --div;
        background-color: rgba(255, 255, 255, 0.4);
        box-shadow: rgba(0, 0, 0, 0.16) 0px 1px 4px;
    }
    .titulo{
        display: flex;
        justify-content: center;
        text-align: center;
		color: rgb(17 24 39);
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		font-family: 'Raleway', sans-serif;
        margin-bottom: 4rem;
    }
    h1{
        background: linear-gradient(to right,rgb(17 24 39),rgb(17 24 39), rgb(113, 124, 247));
		-webkit-background-clip: text;
		color: transparent; 
    }
    .container{
        display: flex;
        border-radius: 30px;
        gap: 10px;
    }
    .sub-container{
        display: flex;
        flex-direction: column;
        gap: 10px;
        border-radius: 30px;
    }
    .tarjeta{
        height: 150px;
        width: 340px;
        border-radius: 30px;
        background-color: rgba(255, 255, 255, 0.4);
        box-shadow: rgba(0, 0, 0, 0.16) 0px 1px 4px;
        position: relative;
        display: block;
        gap: 10px;
        margin-bottom: 5px;
        padding: 15px;
        font-family: 'Raleway', sans-serif;
        font-size: 18px;
        text-align: initial;
    }
    .tarjeta-1{
        height: 300px;
        width: 340px;
        padding: 10px;
        border-radius: 30px;
        background-color: rgba(255, 255, 255, 0.4);
        box-shadow: rgba(0, 0, 0, 0.16) 0px 1px 4px;
    }
    @keyframes scale-up-center{ 0%{transform:scale(.5)} 100%{transform:scale(1)} }
    #proyectos {
        view-timeline-name: --image;
        view-timeline-axis: block;

        animation-timeline: --image;
        animation-name: scale-up-center;

        animation-range: entry 30% cover 50%;
        animation-fill-mode: both;
    }

</style>